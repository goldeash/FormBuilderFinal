@model IEnumerable<FormBuilder.Models.Template>

@{
    ViewData["Title"] = "My Forms";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Forms</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You don't have any forms yet. Click "Create New" to get started.
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var template in Model)
            {
                <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5>@template.Title</h5>
                            <p class="mb-1 text-muted">@template.Description</p>
                            <small class="text-muted">
                                Created: @template.CreatedDate.ToString("g") |
                                Last updated: @template.UpdatedDate.ToString("g")
                            </small>
                        </div>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@template.Id"
                               class="btn btn-sm btn-outline-primary">Edit</a>

                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@template.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Are you sure you want to delete this form?')">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Optional: Add smooth delete with AJAX if needed
        $(document).ready(function() {
            $('form[asp-action="Delete"]').submit(function(e) {
                e.preventDefault();
                if (confirm('Are you sure you want to delete this form?')) {
                    $.post($(this).attr('action'), $(this).serialize(), function() {
                        window.location.reload();
                    });
                }
            });
        });
    </script>
}